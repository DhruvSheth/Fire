<%= form_for @event do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :location %>
  <%= f.text_field :location %>
  
  <%= f.label :start_time %>
  <%= f.datetime_select :start_time %>
  
  <%= f.label :end_time %>
  <%= f.datetime_select :end_time %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :picture_url %>
  <%= f.text_field :picture_url %>

  <%= f.submit "Create Event" %>
<% end %>
