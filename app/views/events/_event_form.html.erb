<%= form_for current_user.events.build do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :location %>
  <%= f.text_field :location, class: "form-control" %>
  
  <%= f.label :start_time %>
  <%= f.datetime_select :start_time, class: "form-control" %><br>
  
  <%= f.label :end_time %>
  <%= f.datetime_select :end_time, class: "form-control" %>
 
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>

  <%= f.submit "Create Event", class: "btn btn-primary" %>
<% end %>
