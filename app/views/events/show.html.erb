<%= render @event %>

<% unless (current_user.is_attending?(@event)) %>
  <%= form_for current_user.event_attendances.new do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>

    <%= f.submit "Attend Event" %>
  <% end %>
<% else %>
  <%= form_for current_user.groups.new do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>

    <%= f.submit "Find Group" %>
  <% end %>
<% end %>
